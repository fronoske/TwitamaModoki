{
  "manifest_version": 3,
  "name": "TwitamaModoki",
  "version": "0.1.0",
  "version_name": "0.1.0",
  "description": "ツイタマ風のモバイル特化X（旧Twitter）クライアント",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/run-twitama-modoki*",
        "https://*.x.com/run-twitama-modoki*"
      ],
      "js": [
        "src/content/index.tsx"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": [
        "https://*.twitter.com/*",
        "https://*.x.com/*"
      ]
    }
  ]
}