{
  "name": "twitama-modoki",
  "version": "0.1.0",
  "description": "ツイタマ風のモバイル特化X（旧Twitter）クライアント Chrome拡張機能",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/update-version.js development && tsc && vite build --mode development && node -e \"require('fs').rmSync('dist/.vite', {recursive:true, force:true})\" && cd dist && 7za a -tzip TwitamaModoki-dev.zip * && cd ..",
    "build:prod": "node scripts/update-version.js production && tsc && vite build --mode production",
    "watch": "vite build --watch --mode development",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/hammerjs": "^2.0.46",
    "hammerjs": "^2.0.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "swiper": "^12.0.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@types/chrome": "^0.1.32",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.7.3",
    "vite": "^7.2.6"
  }
}